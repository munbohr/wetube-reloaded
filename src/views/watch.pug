extends base

block content  
    div.videoContainer#videoContainer
        video(src="/" + video.fileUrl ,width="1200px", height="600px")
        div.videoControls#videoControls
            button.play#play Play
            div
                span#currentTime 00:00
                span  / 
                span#totalTime 00:00        
            div
                input(type="range", value="0",step="1",min="0" ).timeline#timeline
            input(type="range", value=0.5,step="0.1",min="0" max="1")#volume
            button#mute Mute
            
            div 
                button#fullScreen Enter Full Screen
    //-
        div 
            p=video.description  
            small=video.createdAt
        div 
            small Uploaded by 
            a(href=`/users/${video.owner._id}`)=video.owner.username
        if String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;


block scripts
    script(src="/static/js/videoPlayer.js")